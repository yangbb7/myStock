# Production Environment Configuration Template
# Copy this file to .env.production and update the values

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_BASE_URL=wss://api.yourdomain.com

# =============================================================================
# Application Configuration
# =============================================================================
VITE_APP_TITLE=myQuant 量化交易系统
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Professional Quantitative Trading System

# =============================================================================
# Environment Settings
# =============================================================================
VITE_NODE_ENV=production
VITE_DEV_MODE=false
VITE_LOG_LEVEL=info

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG_TOOLS=false
VITE_ENABLE_DEVTOOLS=false

# =============================================================================
# Monitoring Configuration
# =============================================================================
VITE_ENABLE_MONITORING=true

# Error Monitoring
VITE_ERROR_MONITORING_ENABLED=true
VITE_ERROR_MONITORING_ENDPOINT=https://api.yourdomain.com/monitoring/errors
VITE_ERROR_QUEUE_SIZE=100
VITE_ERROR_FLUSH_INTERVAL=30000
VITE_ERROR_SAMPLE_RATE=1.0

# Performance Monitoring
VITE_PERFORMANCE_MONITORING_ENABLED=true
VITE_PERFORMANCE_MONITORING_ENDPOINT=https://api.yourdomain.com/monitoring/performance
VITE_PERFORMANCE_QUEUE_SIZE=50
VITE_PERFORMANCE_FLUSH_INTERVAL=60000
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# User Analytics
VITE_USER_ANALYTICS_ENABLED=true
VITE_ANALYTICS_ENDPOINT=https://api.yourdomain.com/monitoring/analytics
VITE_ANALYTICS_QUEUE_SIZE=100
VITE_ANALYTICS_FLUSH_INTERVAL=30000

# =============================================================================
# Logging Configuration
# =============================================================================
VITE_CONSOLE_LOGGING=false
VITE_REMOTE_LOGGING=true
VITE_LOGS_ENDPOINT=https://api.yourdomain.com/monitoring/logs
VITE_LOG_QUEUE_SIZE=1000
VITE_LOG_FLUSH_INTERVAL=30000
VITE_LOG_RETENTION_DAYS=30

# =============================================================================
# Third-party Services
# =============================================================================

# Sentry Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_RELEASE=1.0.0

# Google Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_GOOGLE_ANALYTICS_ENHANCED_ECOMMERCE=false

# Hotjar User Experience
VITE_HOTJAR_ID=
VITE_HOTJAR_VERSION=6

# =============================================================================
# Security Configuration
# =============================================================================
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_SECURITY_HEADERS=true

# Content Security Policy
VITE_CSP_REPORT_URI=https://api.yourdomain.com/csp-report

# =============================================================================
# Performance Configuration
# =============================================================================
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_PWA=false
VITE_ENABLE_PRELOAD=true
VITE_ENABLE_PREFETCH=true

# Caching
VITE_CACHE_STRATEGY=cache-first
VITE_CACHE_MAX_AGE=86400
VITE_API_CACHE_TTL=300

# =============================================================================
# CDN Configuration
# =============================================================================
VITE_CDN_URL=https://cdn.yourdomain.com
VITE_STATIC_URL=https://static.yourdomain.com

# =============================================================================
# WebSocket Configuration
# =============================================================================
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_HEARTBEAT_INTERVAL=30000

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# =============================================================================
# Localization
# =============================================================================
VITE_DEFAULT_LOCALE=zh-CN
VITE_SUPPORTED_LOCALES=zh-CN,en-US
VITE_FALLBACK_LOCALE=zh-CN

# =============================================================================
# Theme Configuration
# =============================================================================
VITE_DEFAULT_THEME=light
VITE_THEME_PERSISTENCE=true

# =============================================================================
# Build Configuration
# =============================================================================
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# =============================================================================
# Docker Configuration (for docker-compose)
# =============================================================================

# Database
DB_PASSWORD=your_secure_database_password
DB_HOST=db
DB_PORT=5432
DB_NAME=myquant
DB_USER=myquant_user

# Redis
REDIS_PASSWORD=your_secure_redis_password
REDIS_HOST=redis
REDIS_PORT=6379

# Backend
BACKEND_HOST=backend
BACKEND_PORT=8000

# Security
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_here
ENCRYPTION_KEY=your_encryption_key_here

# SSL/TLS
DOMAIN_NAME=yourdomain.com
ACME_EMAIL=admin@yourdomain.com
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password
PROMETHEUS_RETENTION=30d
LOKI_RETENTION=720h

# Traefik
TRAEFIK_AUTH=admin:$2y$10$your_bcrypt_hashed_password

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=myquant-backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# Notification Configuration
# =============================================================================
NOTIFICATION_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.yourdomain.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=noreply@yourdomain.com
EMAIL_SMTP_PASSWORD=your_email_password
ALERT_EMAIL=admin@yourdomain.com

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Health Check Configuration
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Development/Debug (should be false in production)
# =============================================================================
VITE_DEBUG_MODE=false
VITE_VERBOSE_LOGGING=false
VITE_SHOW_PERFORMANCE_METRICS=false