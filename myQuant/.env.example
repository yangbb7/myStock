# MyQuant 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME=MyQuant
VERSION=1.0.0
DEBUG=false

# 数据库配置
DATABASE__TYPE=sqlite
DATABASE__URL=sqlite:///data/myquant.db
# 对于MySQL/PostgreSQL：
# DATABASE__TYPE=mysql
# DATABASE__HOST=localhost
# DATABASE__PORT=3306
# DATABASE__USERNAME=myquant
# DATABASE__PASSWORD=your_password
# DATABASE__DATABASE=myquant

# 风险管理配置
RISK__MAX_POSITION_SIZE=0.1
RISK__MAX_SECTOR_EXPOSURE=0.3
RISK__MAX_TOTAL_EXPOSURE=0.95
RISK__MAX_DRAWDOWN_LIMIT=0.2
RISK__STOP_LOSS_THRESHOLD=0.05
RISK__VAR_CONFIDENCE=0.95
RISK__VAR_WINDOW=252

# 性能配置
PERFORMANCE__CACHE_SIZE=1000
PERFORMANCE__CACHE_TTL=3600
PERFORMANCE__THREAD_POOL_SIZE=4
PERFORMANCE__MAX_WORKERS=8
PERFORMANCE__BATCH_SIZE=1000
PERFORMANCE__MAX_MEMORY_USAGE=0.8

# 数据配置
DATA__PRIMARY_SOURCE=mock
DATA__FALLBACK_SOURCES=["mock"]
DATA__MAX_RETRIES=3
DATA__RETRY_DELAY=1.0
DATA__TIMEOUT=30
DATA__MIN_DATA_POINTS=20
DATA__MAX_MISSING_RATIO=0.1
DATA__REALTIME_UPDATE_INTERVAL=60

# 交易配置
TRADING__MODE=backtest
TRADING__DEFAULT_ORDER_TYPE=MARKET
TRADING__MAX_ORDER_SIZE=1000000.0
TRADING__MIN_ORDER_SIZE=100.0
TRADING__COMMISSION_RATE=0.0003
TRADING__MIN_COMMISSION=5.0
TRADING__STAMP_TAX_RATE=0.001

# 日志配置
LOGGING__LEVEL=INFO
LOGGING__LOG_DIR=logs
LOGGING__MAX_FILE_SIZE=10485760
LOGGING__BACKUP_COUNT=5
LOGGING__CONSOLE_OUTPUT=true
LOGGING__STRUCTURED_LOGGING=true

# 回测配置
BACKTEST__INITIAL_CAPITAL=1000000.0
BACKTEST__START_DATE=2020-01-01
BACKTEST__END_DATE=2023-12-31
BACKTEST__BENCHMARK=000300.SH
BACKTEST__FREQUENCY=D
BACKTEST__SLIPPAGE_RATE=0.001
BACKTEST__EXECUTION_DELAY=0
BACKTEST__SAVE_RESULTS=true
BACKTEST__GENERATE_REPORT=true

# API配置
API__EMQUANT_USERNAME=your_username
API__EMQUANT_PASSWORD=your_password
API__TUSHARE_TOKEN=your_tushare_token
API__RATE_LIMIT=100
API__API_TIMEOUT=30